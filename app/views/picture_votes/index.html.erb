<p id="notice"><%= notice %></p>

<h1>Listing Picture Votes</h1>

<table>
  <thead>
    <tr>
      <th>Direction</th>
      <th>User</th>
      <th>Picture</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @picture_votes.each do |picture_vote| %>
      <tr>
        <td><%= picture_vote.direction %></td>
        <td><%= picture_vote.user %></td>
        <td><%= picture_vote.picture %></td>
        <td><%= link_to 'Show', picture_vote %></td>
        <td><%= link_to 'Edit', edit_picture_vote_path(picture_vote) %></td>
        <td><%= link_to 'Destroy', picture_vote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture vote', new_picture_vote_path %>
