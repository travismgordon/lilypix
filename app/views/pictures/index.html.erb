    <!-- Define all of the tiles: -->
    <div class="box">

      <div class="boxInner">

        <%= image_tag picture.url, class:"tile_image" %>

        <div class="titleBox">
          <% if picture.hot == true %>
              <img src="http://i.imgur.com/A4HGpmd.png", class="hot_image">
            <% else %>
            <% end %>
            <%= picture.title %>
            <%= link_to "<button>View</button>".html_safe, picture %>
          </div>

      </div>

    </div>
  
  <% end %>
