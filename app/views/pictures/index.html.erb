    <% @pictures.each do |picture| %>

          <li>
            <% if picture.hot == true %>
              <img src="http://i.imgur.com/A4HGpmd.png", class="hot_image">
            <% else %>
            <% end %>

            <p id="grid_title"><%= picture.title %></p>

            <%= image_tag picture.url, class:"grid_image" %>
              
            <span><%= picture.caption %></span>

            <%= link_to "<button>View</button>".html_safe, picture %>
                            
          </li>

  <% end %>
  </ul>
