<h3>LilyPix Index</h3>

<%= link_to "<button>Upload</button>".html_safe, new_picture_path %>

  <div id="pattern" class="pattern">
    <ul class="g">
    <% @pictures.each do |picture| %>

          <li>
            <figure>
              <%= image_tag picture.url, style:"height:200px; width:auto;" %>
              <figcaption>
                <h3><% picture.title %></h3>
                
                <span><% picture.caption %></span>

                <%= link_to "<button>View</button>".html_safe, picture %>
                              
                <% if picture.hot == true %>
                  <img src="http://i.imgur.com/A4HGpmd.png", class="hot_image">
                <% else %>
                <% end %>
              </figcaption>
            </figure>
          </li>

  <% end %>
  </ul>
</div>

