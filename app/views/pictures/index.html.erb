<p id="notice"><%= notice %></p>
<div class="pix">
<h1>Listing Pictures</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Caption</th>
      <th>Url</th>
      <th>Vote</th>
      <th>Hot</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="back">
    <% @pictures.each do |picture| %>
      <tr>
        <td><%= picture.title %></td>
        <td><%= picture.caption %></td>
        <td>â€‹<%= image_tag picture.url %></td>
        <td><%= picture.vote %></td>
        <td><%= picture.hot %></td>
        <td><%= link_to 'Comment', new_picture_comment_path(picture_id: picture.id) %></td>
        <td><%= link_to 'Show', picture %></td>
        <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
        <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </div>
  </tbody>
</table>

